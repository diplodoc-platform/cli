{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./fixtures"
  },
  "include": ["fixtures/**/*"],
  "exclude": ["dist", "**/*.test.ts", "**/*.spec.ts"]
}
