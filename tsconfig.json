{
  "extends": "@diplodoc/tsconfig",
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "ES2019",
    "rootDir": ".",
    "outDir": "build",
    "module": "es2022",
    "moduleResolution": "bundler",
    "experimentalDecorators": false,
    "paths": {
      "~/*": ["./src/*"],
      "@diplodoc/cli/lib/*": ["./src/core/*"],
      "@diplodoc/cli": ["./src"]
    }
  },
  "include": ["src/path.d.ts", "src/globals.d.ts", "src", "tests/e2e", "tests/fixtures"],
  "types": ["node"]
}
