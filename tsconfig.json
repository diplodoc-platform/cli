{
  "extends": "@diplodoc/tsconfig",
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "ES2019",
    "outDir": "build",
    "module": "es2022",
    "moduleResolution": "bundler",
    "experimentalDecorators": false,
    "paths": {
      "~/*": ["./src/*"],
      "@diplodoc/cli/lib/*": ["./src/core/*"],
      "@diplodoc/cli/commands/*": ["./src/commands/*"]
    }
  },
  "include": ["src"],
  "types": ["node"]
}
