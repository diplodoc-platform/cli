{
  "extends": "@diplodoc/tsconfig",
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "es6",
    "outDir": "build",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "types": ["node"]
}
